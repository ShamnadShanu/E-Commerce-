<section class="login_area p_100">
    <div class="container">
        <div class="login_inner">
            <div class="row">
                <div class="col-lg-5">
                    <div class="login_title">
                        <h2>Change Password</h2>
                    </div>

                    <form action="/changePassword" method="POST" id="Validate" class="login_form row">
                        <div class="col-lg-12 form-group">
                            <label for="">Old Password</label>
                            <P style="color: red;">{{Error}}</P>
                            <input type="password" class="form-control" name="old"  placeholder="Old Password">
                        </div>
                        <input type="text" hidden name="id" value="{{user._id}}" id="">
                            <div class="col-lg-12 form-group ">
                                <label for="">New Password</label>
                                <input type="password" class="form-control" id="No" name="new"  placeholder="New Password">
                            </div>
                        <div class="col-lg-12 form-group">
                            <button type="submit" value="submit" class="btn update_btn form-control">Change Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(()=>{
        $('#Validate').validate({
            rules:{
                old:{
                    required:true
                },
                new:{
                    required:true
                }
            }
        })
    })
</script>