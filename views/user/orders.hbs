<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>No</th>
            <th>Date</th>
            <th>DELIVERY ADDRESS</th>
            <th>PIN</th>
            <th>PAYMENT</th>
            <th>AMOUNT</th>
            <th>STATUS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each Orders}}
        <tr>
                                        <td scope="row" id="count">{{math @index "+" 1}}</td>

            <td>{{this.date}}</td>
            <td>t{{this.deliveryDetails.address}}</td>
            <td>{{this.deliveryDetails.pincode}}</td>
            <td>{{this.paymentMethod}}</td>
         <td>{{this.totalAmount}}</td>
         <td>{{this.status}}</td>
         <td>
             <a class="btn btn-primary" href="/details/{{this._id}}">Details</a>
         </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>