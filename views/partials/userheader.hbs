<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="card user-card-full">
                <div class="row m-l-0 m-r-0">
                    <div class="col-md-12 bg-c-lite-green user-profile">
                        <div class="card-block text-center text-white">
                            <div class="m-b-25">
                                <div class="col-md-">
                                    {{#if coupon}}
                                    {{#each coupon}}
                                    <div class="row">
                                        <div class="col-md-10">
                                            <label for="myInput">Refferal Reward</label>
                                            <input class="form-control"  type="text" value="{{this}}" id="myInput{{this}}" readonly>
                                        </div>
                                        <div class="col-md-2">
                                            <button class="btn btn-primary mt-4" onclick="myFunction('{{this}}')">Copy</button>
                                        </div>
                                    </div>
                                    {{/each}}
                                    {{else}}
                                    <h6>No coupons Available  .</h6>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    function myFunction(id) {
        /* Get the text field */
        var copyText = document.getElementById("myInput"+id)

        /* Select the text field */
        copyText.select();
        copyText.setSelectionRange(0, 99999); /* For mobile devices */

        /* Copy the text inside the text field */
        document.execCommand("copy");

        /* Alert the copied text */
        alert("Copied the text: " + copyText.value);
    }
</script>


